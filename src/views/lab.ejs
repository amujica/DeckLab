<body>
  
    <%- include("partials/head")%>
    <%- include("partials/navigation") %>
    
    <!--TÍTULO-------------------------------------------------------------------->

      <div class="p-3 mb-0 ml-5 mr-5 mt-0">
        <h3>  Laboratory</h3>
      </div>


      <!--TAPETE ----------------------------------------------------------------->

      <div class="tapete p-3 mb-2 ml-5 mr-5 mt-0 text-white shadow-lg"> 
          
        <div id="naipes" >
          <div class="naipe" id="1"><img src="/img/cards/AH.png" > </div>
          <div class="naipe" id="2"><img src="/img/cards/2H.png" > </div>
          <div class="naipe" id="3"><img src="/img/cards/3H.png" > </div>
          <div class="naipe" id="4"><img src="/img/cards/4H.png" > </div>
          <div class="naipe" id="5"><img src="/img/cards/5H.png" > </div>
          <div class="naipe" id="6"><img src="/img/cards/6H.png" > </div>-
          
         
          <!--BUTTONS----------------------->
        </div>

          <div  class="p-3 mb-2">
            <button id="faroExt"> Faro Exterior</button>
            <button id="faroInt"> Faro Interior</button>
            <button> Cortar por la carta n</button>
            <button> Random Shuffle</button>
            <button id="cut"> Cortar por la 3 (Delante del )</button>
            <button> Clear last operation</button>
          </div>
        
          
         
      </div>
      
       
     

      <!--CURRENT COMBINATION--------------------------------------------->
      
      <div class="card ml-2 border border-secondary"  >
        <h5 class="card-header">Current combination</h5>
        <div class=" d-flex flex-row border-top border-secondary">
          <div class="card-body" >
            <p class="card-text" id="currentComb"> 

            </p>
              
          </div>
            
          <div class="mb-2 ml-1 mr-2 mt-2" style="text-align: center; display: flex; flex-direction: column;">
              <button class="btn-info mb-1 ml-1 mr-1 mt-1 " data-toggle="tooltip" data-html="true" title="Add combination and it will appear in your saved combinations">Add new combination</button>
              <button class="btn-info mb-1 ml-1 mr-1 mt-1" data-toggle="tooltip" data-html="true" title="Add combination and stack appearing in the screen and they will appear in your saved combinations and stacks">Add stack and combination</button>
              <button class="btn-info mb-1 ml-1 mr-1 mt-1 " data-toggle="tooltip" data-html="true" title="Clear current combination on screen" style="align-self: center;" id = "clear">Clear</button>
          </div>
        </div>
      </div>
        
       
      <!--YOUR COMBINATIONS------------------------------------------------------------------->

        <div class="card ml-2 mt-1 mb-2 border border-secondary">
          <h5 class="card-header">Your combinations - Here we will have a Carousel</h5> 
          <div class="card-body border-top border-secondary">
            <p class="card-text"> <strong> Mnemonica</strong> --> Faro Shuffle Int -->
            Faro Shuffle Ext --> Cut by 5 Hearts --> Faro Shuffle Ext --> <strong>Aronson</strong>--> Cut by A Spades
            --> Faro Shuffle Int --> <strong>New Deck Order </strong></p>
          </div>
        </div>
          
       
</body>

